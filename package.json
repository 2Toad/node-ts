{
  "name": "node-ts",
  "version": "1.2.0",
  "description": "Opinionated boilerplate for a Node.js TypeScript app",
  "main": "dist/index.js",
  "scripts": {
    "clean": "npx rimraf dist",
    "build": "npm run clean && npx tsc",
    "start": "node dist/index.js",
    "local": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "test:coverage": "jest -i --coverage",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "Node",
    "TypeScript",
    "Boilerplate"
  ],
  "repository": "https://github.com/2toad/node-ts.git",
  "author": "2Toad, LLC",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.1",
    "joi": "^17.6.0",
    "winston": "^3.7.2",
    "winston-slack-webhook-transport": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "concurrently": "^7.2.1",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.2",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
